{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=DeviceOwnership;Username=postgres;Password=postgres",
    "Redis": ""
  },

  "Jwt": {
    "Secret": "dev-jwt-secret-key-min-32-chars-long!",
    "Issuer": "DeviceOwnershipAPI",
    "Audience": "DeviceOwnershipAPI"
  },

  "Security": {
    "EncryptionKey": "dev-encryption-key-32-characters!"
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ]
  }
}
