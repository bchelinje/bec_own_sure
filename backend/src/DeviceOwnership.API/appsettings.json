{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=DeviceOwnership;Username=postgres;Password=<your-password>",
    "Redis": "localhost:6379",
    "BlobStorage": "DefaultEndpointsProtocol=https;AccountName=<account-name>;AccountKey=<account-key>;EndpointSuffix=core.windows.net"
  },

  "AzureKeyVault": {
    "VaultUri": "https://<your-keyvault>.vault.azure.net/",
    "TenantId": "<tenant-id>",
    "ClientId": "<client-id>",
    "ClientSecret": "<client-secret>"
  },

  "OpenIddict": {
    "Issuer": "https://api.deviceownership.com",
    "AccessTokenLifetime": 900,
    "IdentityTokenLifetime": 3600,
    "RefreshTokenLifetime": 604800,
    "UseRollingRefreshTokens": true
  },

  "Jwt": {
    "Issuer": "https://api.deviceownership.com",
    "Audience": "device_api",
    "SigningKey": "<use-azure-key-vault-in-production>"
  },

  "Cors": {
    "AllowedOrigins": [
      "https://app.deviceownership.com",
      "http://localhost:4200",
      "deviceapp://callback"
    ]
  },

  "Storage": {
    "BlobContainer": "device-photos",
    "DocumentContainer": "device-documents",
    "MaxFileSizeMB": 10,
    "AllowedImageTypes": [".jpg", ".jpeg", ".png", ".gif"],
    "AllowedDocumentTypes": [".pdf", ".doc", ".docx"]
  },

  "Email": {
    "Provider": "SendGrid",
    "ApiKey": "<sendgrid-api-key>",
    "FromEmail": "noreply@deviceownership.com",
    "FromName": "Device Ownership Platform"
  },

  "Sms": {
    "Provider": "Twilio",
    "AccountSid": "<twilio-account-sid>",
    "AuthToken": "<twilio-auth-token>",
    "FromNumber": "+44xxxxxxxxxx"
  },

  "Stripe": {
    "SecretKey": "<stripe-secret-key>",
    "PublishableKey": "<stripe-publishable-key>",
    "WebhookSecret": "<stripe-webhook-secret>",
    "PremiumMonthlyPriceId": "price_xxx",
    "PremiumYearlyPriceId": "price_yyy",
    "BusinessPriceId": "price_zzz"
  },

  "Subscription": {
    "FreeTierDeviceLimit": 3,
    "PremiumMonthlyPrice": 1.99,
    "PremiumYearlyPrice": 19.99,
    "BusinessPrice": 49.99
  },

  "RateLimit": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": 60,
    "QueueLimit": 10
  },

  "ApplicationInsights": {
    "ConnectionString": "<app-insights-connection-string>"
  },

  "NotificationHubs": {
    "ConnectionString": "<notification-hub-connection-string>",
    "HubName": "device-ownership-notifications"
  },

  "Security": {
    "EncryptionKeyName": "SerialNumberEncryptionKey",
    "PasswordHashIterations": 10000,
    "MaxLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  },

  "Marketplace": {
    "ListingExpiryDays": 90,
    "MaxListingsPerUser": 50,
    "CommissionPercentage": 5.0
  },

  "OwnershipTransfer": {
    "ExpiryDays": 7,
    "RequireEmailVerification": true,
    "RequirePhoneVerification": false
  }
}
